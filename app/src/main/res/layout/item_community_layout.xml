<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/shangpin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size_10dp"
        android:background="@drawable/radius_white_8dp"
        android:orientation="vertical"
        android:layout_marginStart="4.5dp"
        android:layout_marginEnd="4.5dp"
        >
        
        <com.youwu.shouyin.utils_view.ScaleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_white_8dp"
            attr:widthToHeight="0.77">

            <com.youwu.shouyin.utils_view.CustomRoundAngleImageView
                android:id="@+id/iv_commodity_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/shiwu"
                roundiv:left_top_radius="8dp"
                roundiv:right_top_radius="8dp"
                tools:src="@mipmap/shiwu"
                android:layout_weight="3"

                />
        </com.youwu.shouyin.utils_view.ScaleLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:padding="@dimen/size_10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/item_commodity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="云南辣椒炒肉"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#F80000"
                        android:textSize="@dimen/text_13sp" />
                    <TextView
                        android:id="@+id/com_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.9"
                        android:textColor="#F80000"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_23sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/shopping_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="@dimen/text_12sp"
        android:textColor="@color/main_white"
        android:layout_toRightOf="@+id/shouyintai"
        android:layout_marginLeft="@dimen/size_5dp"
        android:background="@drawable/radius_blue_white_xian_45dp"
        android:paddingTop="@dimen/size_1dp"
        android:paddingBottom="@dimen/size_1dp"
        android:paddingLeft="@dimen/size_8dp"
        android:paddingRight="@dimen/size_8dp"

        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_marginRight="@dimen/size_15dp"

        />
</RelativeLayout>