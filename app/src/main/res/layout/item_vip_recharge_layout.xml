<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content">

    <com.youwu.shouyin.utils_view.ScaleLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        attr:widthToHeight="0.62"
        >
        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_5dp"
            android:background="@drawable/radius_white_5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值金额"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/main_black_5B"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_marginLeft="@dimen/size_15dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:id="@+id/rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/main_black_5B"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/recharge_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.00"
                    android:textColor="@color/main_black_5B"
                    android:textStyle="bold"
                    android:textSize="52sp" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/radius_blue_bottom_5dp"
                >
                <TextView
                    android:id="@+id/recharge_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赠送：5元无门槛通用券x5"
                    android:textColor="@color/main_white"
                    android:textSize="15sp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>



        </RelativeLayout>
    </com.youwu.shouyin.utils_view.ScaleLayout>



</RelativeLayout>