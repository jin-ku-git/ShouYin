<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:orientation="horizontal"
        android:background="@drawable/radius_white_8dp"
        android:layout_marginBottom="@dimen/size_11dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/goods_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品条码"
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/main_black_85"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/goods_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品分类"
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/main_black_85"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/main_black_85"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/goods_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品数量"
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/main_black_85"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/goods_prick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小计"
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/main_color"
            android:gravity="center"
            android:layout_weight="1"
            />

    </LinearLayout>


</LinearLayout>